<Window x:Class="Border.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Border"
        mc:Ignorable="d"
        Title="MainWindow" Height="512.134" Width="800">
    <!--BorderBrush="Black" BorderThickness="1"邊框顏色跟顯示邊框-->
    <!--CornerRadius="20"可以讓使邊框有圓角-->
    <!--Background="LightYellow"背景-->
    <!--Padding="5"添加空間-->
    <Border Background="LightYellow" BorderBrush="SteelBlue" BorderThickness="3,5,3,5" 
            CornerRadius="3" Padding="5" VerticalAlignment="Top" >
        <StackPanel>
            <Button Margin="3" Content="ONE"/>
            <Button Margin="3" Content="TWO"/>
            <Button Margin="3" Content="THREE"/>
        </StackPanel>
    </Border>
</Window>
