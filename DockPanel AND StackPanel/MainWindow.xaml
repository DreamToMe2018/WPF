<Window x:Class="DockPanel_AND_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel_AND_StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <!--Orientation="Horizontal"變成水平排列-->
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="OK" Margin="10,10,2,10" Padding="3"/>
            <Button Content="Cancel" Margin="2,10,10,10" Padding="3"/>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" Margin="10" Text="This is a test."/>
    </DockPanel>
</Window>
