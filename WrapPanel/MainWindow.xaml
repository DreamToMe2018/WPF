<Window x:Class="WrapPanel_AND_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrapPanel_AND_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel Margin="3">
        <Button VerticalAlignment="Top" Content="Top Button" Height="27" Width="107"/>
        <Button MaxHeight="60" Content="Tall Button" Height="58" Width="83"/>
        <Button VerticalAlignment="Bottom" Content="Bottom Button"/>
        <Button Content="Stretch Button"/>
        <Button VerticalAlignment="Center" Content="Centered Button"/>
    </WrapPanel>
</Window>
