<Window x:Class="冒泡路由.一次處理按鈕全部的事件"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:冒泡路由"
        mc:Ignorable="d"
        Title="一次處理按鈕全部的事件" Height="450" Width="800">
    <Grid>
        <!--StackPanel沒有click事件，所以要用Button的事件來觸發-->
        <StackPanel ButtonBase.Click="StackPanel_Click">
            <Button Content="Button1" Name="a"/>
            <Button Content="Button2" Name="b"/>
            <Button Content="Button3" Name="c"/>
            <Button Content="Button4" Name="d"/>
        </StackPanel>
    </Grid>
</Window>
