<Window x:Class="按鈕裡面可放元件.具有形狀內容的按鈕"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:按鈕裡面可放元件"
        mc:Ignorable="d"
        Title="具有形狀內容的按鈕" Height="450" Width="800">
    <Button Margin="3">
        <Grid>
            <!--Polygon可以做出菱形-->
            <Polygon Points="100,25 125,0 200,25 125,50" Fill="LightBlue"/>
            <Polygon Points="100,25 75,0 0,25 75,50" Fill="BurlyWood"/>
        </Grid>
    </Button>

</Window>
